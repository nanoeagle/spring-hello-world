<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="vocalistBean" scope="prototype"
    class="com.example.helloworld.lookupmethodinjection.Vocalist"/>
  <bean id="abstractLookup" 
    class="com.example.helloworld.lookupmethodinjection.AbstractLookup">
    <lookup-method name="getMyVocalist" bean="vocalistBean"/>
  </bean>
  <bean id="standardLookup"
    class="com.example.helloworld.lookupmethodinjection.StandardLookup">
    <property name="vocalist" ref="vocalistBean"/>
 </bean>
</beans>