<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:p="http://www.springframework.org/schema/p"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="shaMesDigest" 
    class="com.example.helloworld.beanfactory.MessageDigestFactoryBean"
    p:algorithm="SHA1"/>

  <bean id="defaultMesDigest" 
    class="com.example.helloworld.beanfactory.MessageDigestFactoryBean"/>

  <bean id="mesDigester" 
    class="com.example.helloworld.beanfactory.MessageDigester"
    p:mesDigest1-ref="shaMesDigest"
    p:mesDigest2-ref="defaultMesDigest"/>
</beans>