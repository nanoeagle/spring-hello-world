<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="provider" name="helloProvider, alias2"
    class="com.example.helloworld.basicdependencyinjection.HelloWorldMessageProvider"/>
  <bean id="renderer" class="com.example.helloworld.basicdependencyinjection.StandardOutMessageRenderer">
    <property name="messageProvider" ref="provider"/>
    <!-- if using alias. -->
    <!-- <property name="messageProvider"><ref bean="helloProvider"/></property> -->
  </bean>

  <!-- 
    or use this with 
      xmlns:p="http://www.springframework.org/schema/p"
    -->
  <!-- <bean id="renderer" class="com.example.helloworld.StandardOutMessageRenderer"
    p:messageProvider-ref="provider"/> -->
</beans>